<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
     ( <%= link_to "edit", edit_message_path(message.id) %>
      <%= link_to "delete" , message_path(message.id) , method: :DELETE , data:{confirm: "削除してもよろしいですか？"}%>
     )
      <br>
    <% end %>
  </div>
</div>


